
<div class="container">
    <div class="row justify-content-md-center">
      <%= render "devise/shared/error_messages", resource: resource %>
      <br />
        <h2>Register New Account</h2>
          <p style="font-size:12pt;">New account applications are reviewed and subject to approval of the HLA-COVID19 governing body. You will be notified by email if your account is approved.</p>
          <%= form_for(@user, url: registration_path(@user)) do |f| %>
            <div class="row form-group" style="margin-left:1px;margin-right:1px;">
                <%= f.label :email, :class => "col-4 col-form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :required => true %>
            </div>

            <div class="row form-group" style="margin-left:1px;margin-right:1px;">
                <%= f.label :affiliation, "Institutional Affiliation", :class => "col-10 col-form-label" %><br />
                <%= f.text_field :affiliation, :class => "form-control", :required => true %>
            </div>

            <div class="row form-group" style="margin-left:1px;margin-right:1px;">
                <%= f.label :password, :class => "col-4 col-form-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :required => true %>
            </div>

            <div class="row form-group" style="margin-left:1px;margin-right:1px;">
                <%= f.label :password_confirmation, :class => "col-10 col-form-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
            </div>
            <div class="row justify-content-md-center" style="margin-bottom:15px;"> 
                <div class="actions">
                    <%= f.submit "Register", :class => "btn btn-primary" %>
                </div>
            </div>
          <% end %>
    
    </div>
    
</div>
