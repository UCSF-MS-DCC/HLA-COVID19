<div class="container-fluid" >
    <div class="row" id="home-page-card">
        <div class="col-md-5">
            <div id="title-placement-box">
                <h1 id="title-text">HLA-COVID19 Database</h1>
            </div>
        </div>
        <% if !current_user %>
            <div class="col-md-2 ml-auto" id="session-links">
                <%= link_to "Sign up", new_registration_path(@user), :class => "session-link" %>
                <%= link_to "Log in", new_session_path(@user), :class => "session-link" %>
            </div>
        <% else %>
            <div class="col-md-3 ml-auto" id="session-links">
                <div class="dropdown">
                    <button class="btn btn-trans dropdown-toggle" type="button" data-toggle="dropdown" id="main-dropdown-button-text"><%= current_user.email %><span class="caret"></span></button>
                    <ul class="dropdown-menu" style="padding-left:25px;">
                        <li class="dropdown-menu-item"><%= link_to "Edit password", edit_user_password_path, :class => "menu-link"%></li>
                        <li class="dropdown-menu-item"><%= link_to "Logout", destroy_user_session_path, :method => 'delete', :class => "menu-link"%></li>
                    </ul>     
                </div>
            </div>
        <% end %>
    </div>
</div>