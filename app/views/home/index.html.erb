<div class="container-fluid main-view" >
    <div class="row justify-content-md-center" style="margin-top:40px;margin-bottom:50px;">
        <div class="col-10">
            <h2>HLA | COVID-19 Database portal</h2>
            <br>
            <p>From here, users may register for an account, view summary statistics, upload data and manage access to it, and request access to the consortium's online
            HLA imputation tool and RStudio Server platform.<p>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div id="sex-chart"></div>
        </div>
        <div class="col-md-4">
            <div id="age-chart"></div>
        </div>
        <div class="col-md-4">
            <div id="n-chart-box">
                <div id="n-chart-inner">
                    <div class="n-chart-label-box">
                        <h6 class="n-chart-label">Subjects</h6>
                    </div>
                    <div id="n-chart-subjects-box">
                        <h1 class="n-chart-value text-center"><%= @subjects_n %></h1>
                    </div>
                    <hr>
                    <div class="n-chart-label-box">
                        <h6 class="n-chart-label">HLA</h6>
                    </div>
                    <div id="n-chart-hlas-box">                   
                        <div id="n-chart-imputed-hlas-box">
                            <div class="n-chart-value-box">
                                <h1 class="n-chart-value text-center"><%= @all_hlas_n %></h1>
                            </div>
                            <div class="n-chart-label-box">
                                <h6 class="n-chart-label text-center"></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% @hla_genes.each_with_index do |g, idx| %>
        <% if idx == 0 || idx == 5 %>
            <div class="row justify-content-md-center">
                <div class="col-md-4" id="<%= g %>-chart-container">
                    <div class="allele-freq-chart" data-gene="<%= @hla_genes[idx] %>" id="<%= @hla_genes[idx] %>-chart"></div>
                </div>
                <div class="col-md-4" id="<%= g %>-chart-container">
                    <div class="allele-freq-chart" data-gene="<%= @hla_genes[idx + 1] %>" id="<%= @hla_genes[idx + 1] %>-chart"></div>
                </div>
                <div class="col-md-4" id="<%= g %>-chart-container">
                    <div class="allele-freq-chart" data-gene="<%= @hla_genes[idx + 2] %>" id="<%= @hla_genes[idx + 2] %>-chart"></div>
                </div>
            </div>
        <% elsif idx == 3 %>
            <div class="row justify-content-md-center">
                <div class="col-md-4" id="<%= g %>-chart-container">
                    <div class="allele-freq-chart" data-gene="<%= @hla_genes[idx] %>" id="<%= @hla_genes[idx] %>-chart"></div>
                </div>
                <div class="col-md-4" id="<%= g %>-chart-container">
                    <div class="allele-freq-chart" data-gene="<%= @hla_genes[idx + 1] %>" id="<%= @hla_genes[idx + 1] %>-chart"></div>
                </div>
            </div>
        <% else %>
            <% next %>
        <% end %>
    <% end %>

</div>

